<article class="peep card rounded-0 d-flex border-0 mb-4" id="peep-<%= peep.id %>">
  <div class="card-body">
    <h3 class="card-text mb-3 w-100"><%= peep.body %></h3>
    <h4 class="card-title mr-2"> 
      - <%= (User.find_by id: peep.user_id).name %> 
      <span class="small text-muted mr-2">@<%= (User.find_by id: peep.user_id).username %></span>
    </h4>
  </div> 
  <div class="card-footer border-0 bg-transparent d-flex justify-content-between">
    <div class="d-flex">
      <p class="card-text"><small class="text-muted"><%= peep.created_at.strftime("%e %b %Y %k:%M") %></small></p>
    </div>
    <% if @user && @user.id == peep.user_id %>
      <div class="btn-group" role="group" aria-label="tweet options" >
        <button id="btnGroupDrop1" type="button" class="btn dropdown-toggle" aria-label="expand tweet options" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        </button>
        <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
          <form action="/peeps/<%= peep.id %>/edit" method="get">
            <input class="dropdown-item" type="submit" value="Edit" >
          </form>
          <form action="/peeps/<%= peep.id %>" method="post">
            <input type='hidden' name='_method' value='DELETE'/>
            <input class="dropdown-item" type="submit" value="Delete">
          </form>
        </div>
      </div>
    <% end %>
  </div> 
</article> 